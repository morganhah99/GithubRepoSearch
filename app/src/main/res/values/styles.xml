<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ConstraintLayoutStyle">
        <item name="android:paddingHorizontal">@dimen/row_item_margin_horizontal</item>

    </style>

    <style name="RepoNameTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/repoNameTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RepoDescriptionTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/repoDescriptionTextColor</item>
    </style>

    <style name="RepoMetadataTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/repoMetadataTextColor</item>
    </style>

    <style name="RepoSearchTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColorHint">@color/repoSearchTextColor</item>
        <item name="android:textColor">@color/repoSearchTextColor</item>
    </style>

    <style name="ImageViewMargins">
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="TextViewMargins">
        <item name="android:layout_marginEnd">16dp</item>
    </style>
</resources>